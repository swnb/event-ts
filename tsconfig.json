{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    // "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "dist",
    "src/setupTests.ts",
    "tslint:latest",
    "tslint-config-prettier",
    "example/**",
    "src/*_test.ts",
    "src/proxy/chrome.ts",
    "test"
  ],
  "include": ["src"]
}
